@model IEnumerable<ProcesoTareas.Models.TipoTarea>

@{
    ViewData["Title"] = "Tipo De Tarea";
}

<h2>Tipo de Tareas</h2>

<p>
    <button class="btn btn-outline-primary text-white" value="Editar">
        <a asp-action="Create">Nuevo</a>
    </button>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>

                <div>
                    <button class="btn btn-secondary text-white" value="Editar">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-white"><i class="far fa-edit"></i></a>
                    </button>
                </div>
                <br />
                <div>
                    <form asp-action="DarBaja" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger" value="DarBaja">
                            <a asp-action="DarBaja" asp-route-id="@item.Id" class="text-white"> <i class="far fa-trash-alt"></i></a>
                        </button>
                    </form>
                </div>




                @*<button class="btn btn-secondary text-white" value="Editar">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-white">Editar</a>
                </button>

                <form asp-action="DarBaja" asp-route-id="@item.Id">
                    <input type="submit" value="DarBaja" class="btn btn-danger" />
                </form>*@

            </td>
        </tr>
}
    </tbody>
</table>
