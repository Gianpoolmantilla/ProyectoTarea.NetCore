@model IEnumerable<ProcesoTareas.Models.ViewModelEstados.Modificacion>

@{
    ViewData["Title"] = "Modificacion";
    Layout = "_Layout";
}

<h2>Modificar Tarea</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Tipo de Tarea
            </th>
            <th>
                Observación
            </th>
            <th>
                Prioridad
            </th>
            <th>
                Fecha Alta
            </th>           
            <th>
                Vencimiento
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
             
                @item.Nombre
            </td>
            <td>
                @item.TipoTarea
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @item.Prioridad
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimiento)
            </td>

            <td>
            <div class="col-sm-1">
                <button class="btn btn-dark text-white" value="Editar" >
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-white">Editar</a>
                </button>
                <form asp-action="Delete"  asp-route-id="@item.Id" >
                    <input  type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

        </td>
        </tr>
        }
    </tbody>
</table>

