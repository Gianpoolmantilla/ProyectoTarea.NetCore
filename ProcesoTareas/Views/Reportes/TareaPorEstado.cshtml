@model IEnumerable<ProcesoTareas.Models.ViewModel.Reportes>
@{
    ViewData["Title"] = "TareaPorEstado";
    List<SelectListItem> listaEstado = (List<SelectListItem>)ViewBag.fkestado;
}

<h2>Tarea Por Estado</h2>

<hr />
<div class="col-md-12">
    @using (Html.BeginForm())
    {


        @*<form asp-action="TareaPorEstado">*@
        <div class="row m-10">
            <div class="col-md-10">

                <div class="form-group">
                    <div class="control-label col-md-2">Estado</div>
                    <div class="col-3">
                        @*<input type="text" name="estado" id="estado" class="form-control" />*@
                        @Html.DropDownList("estado", listaEstado as IEnumerable<SelectListItem>, "Seleccione un prioridad..", new { id = "normalDropwn2", @class = "form-control" })

                        @*@Html.DropDownListFor(model => model.Estado, listaEstado, "Seleccione un tipo..", new { id = "normalDropwn", @class = "form-control" })*@
                        <span class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <div class="row">

                        <div class="col-4">
                            <div class="control-label ">fecha Desde</div>
                            <input type="date" name="fechaD" id="fechaD" class="form-control" />
                        </div>
                        <div class="col-4">
                            <div class="control-label ">fecha Hasta</div>
                            <input type="date" name="fechaH" id="fechaH" class="form-control" />
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group col-md-10">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Buscar" class="btn btn-success" />
            </div>
        </div>
    }


    <div class="row m-12">
        <div class="col-md-12">

            <table class="table  table-hover table-bordered">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        tarea
                    </th>
                    <th>
                        tipo de tarea
                    </th>
                    <th>
                        Prioridad
                    </th>
                    <th>
                        Fecha de alta
                    </th>
                    <th>
                        Observacion
                    </th>
                </tr>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tarea.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tarea.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoTarea.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prioridad.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tarea.FechaAlta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tarea.Observacion)
                            </td>
                        </tr>
                    }

                }

            </table>
        </div>
    </div>


</div>


    @*</form>*@

